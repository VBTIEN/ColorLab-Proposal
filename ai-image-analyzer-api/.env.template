# Environment Configuration Template
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# AWS Configuration
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Configuration
S3_BUCKET_NAME=image-analyzer-workshop-1751722329
S3_UPLOAD_PATH=uploads
S3_ANALYSIS_PATH=analysis

# Lambda Configuration
LAMBDA_FUNCTION_NAME=ImageAnalyzer

# Rekognition Configuration
REKOGNITION_MAX_LABELS=25
REKOGNITION_MIN_CONFIDENCE=25.0

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MAX_TOKENS=1000

# Database Configuration (optional)
DATABASE_URL=postgresql://user:password@localhost/ai_image_analyzer

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/jpg", "image/png", "image/gif", "image/webp"]

# Analysis Settings
COLOR_ANALYSIS_ENABLED=true
HARMONY_ANALYSIS_ENABLED=true
TEMPERATURE_ANALYSIS_ENABLED=true
MOOD_ANALYSIS_ENABLED=true
RECOMMENDATIONS_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000", "*"]
